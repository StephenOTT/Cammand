@page "/process-instances/{instanceId}"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">
<MudGrid>
<MudItem xs="12">
    <MudText Typo="Typo.h3" GutterBottom="true">Process Instance <code>@InstanceId</code> Details</MudText>
</MudItem>
@if (_instance != null)
{
