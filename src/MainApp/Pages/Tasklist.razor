@using MainApp.Components.Tasklist
@using Camunda.Http.Api

@inject AppData AppData

@page "/tasklist"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Tasklist</MudText>
    <MudGrid>
        <MudItem xs="12">
            <MudCard>
                <MudCardheader>
                    <CardHeaderContent>
                        Runtime Tasks
                    </CardHeaderContent>
                </MudCardheader>
                <MudCardContent>
                    <RuntimeTasklistDataGrid camunda="@_camunda"/>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>Historic Tasks</CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <HistoricTasklistDataGrid camunda="@_camunda"/>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>


@code {

    CamundaClient _camunda;

    protected override void OnInitialized()
    {
        _camunda = AppData.CamundaClient;
    }

}