@using MainApp.Components.Tasklist
@using Camunda.Http.Api
@using Camunda.Http.Api.Model
@using Margin = Blazorise.Margin

@inject AppData AppData

@page "/tasklist"

<Container>
    <Row>
        <Column>
            <Heading Size="HeadingSize.Is1">Tasklist</Heading>
        </Column>
    </Row>
    <Row Margin="Margin.Is1.OnY">
        <Column>
            <Card>
                <CardHeader>Runtime Tasks</CardHeader>
                <CardBody>
                    <RuntimeTasklistDataGrid camunda="@_camunda" PageSize="5"/>
                </CardBody>
            </Card>
        </Column>
    </Row>
        <Row Margin="Margin.Is1.OnY">
            <Column>
                <Card>
                    <CardHeader>Historic Tasks</CardHeader>
                    <CardBody>
                        <HistoricTasklistDataGrid camunda="@_camunda" PageSize="5"/>
                    </CardBody>
                </Card>
            </Column>
        </Row>
</Container>


@code {

    CamundaClient _camunda;

    protected override async Task OnInitializedAsync()
    {
        _camunda = AppData.CamundaClient;

        StateHasChanged();
    }

}