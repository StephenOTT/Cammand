@using Blazor.Bpmn.Components

<MudGrid>
    
    @if (Element != null)
    {
        <CoreForm Element="@Element"/>


        @if (Element.Type == IBusinessObject.BpmnParticipant)
        {
            var participant = Element.BusinessObject.AsParticipant();
            <ParticipantForm Element="@participant"/>
            <ProcessForm Element="@participant.ProcessRef"/>
        }

        @if (Element.Type == IBusinessObject.BpmnProcess)
        {
            <ProcessForm Element="@Element.BusinessObject.AsProcess()"/>
        }

        <ElementDocumentationForm Element="@Element"/>

        @if (Element.Type == IBusinessObject.BpmnUserTask)
        {
            <UserTaskForm Element="@Element.BusinessObject.AsUserTask()"/>
        }

        @if (Element.Type == IBusinessObject.BpmnSequenceFlow)
        {
            <SequenceFlowForm Element="@Element.BusinessObject.AsSequenceFlow()"/>
        }

        @if (Element.Type == IBusinessObject.BpmnScriptTask)
        {
            <ScriptTaskForm Element="@Element.BusinessObject.AsScriptTask()"/>
        }
    }



